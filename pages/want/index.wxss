} */


.tags-list-name{
    width: 120rpx;
    font-size:24rpx;
    text-align: center;
}

.res {
    width: 690rpx;
    margin: 0 auto;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    padding-top: 200rpx;
}

.res .title {
    color: #000;
    font-size: 40rpx;
    font-weight: bolder;
    width: 100%;
    text-align: center;
    margin-top: 60rpx;
}

.res .desc {
    font-size: 28rpx;
    color: #333;
    line-height: 1.5;
    text-align: center;
    margin-top: 60rpx;
}

.res .btns {
    margin: 60rpx auto;
    display: flex;
    width:690rpx;
    flex-direction: column;
}

.banner image{
    width:710rpx;
    border-radius: 10rpx; 
    overflow: hidden;
    height:280rpx;

}

.banner {
    margin:20rpx auto; 
    display: flex;
    justify-content: center;
    align-items: center;
}
