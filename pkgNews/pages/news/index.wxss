.new-cats{
  display: flex;
  flex-wrap: nowrap;
  white-space: nowrap;
	overflow-x: auto;
	scrollbar-width: none;
  -webkit-overflow-scrolling: touch;
  padding: 0 25rpx 30rpx 25rpx;
  /* padding-bottom: 30rpx; */
  max-height: 100rpx;
  overflow-y: hidden; /* 禁止垂直滚动 */
  /* height: auto; */
  background-color: #fff;
}
.new-cats::-webkit-scrollbar {
	display: none;
}
.new-cats .new-cat{
  height: 60rpx;line-height: 60rpx;font-size: 28rpx;color: #333;background-color: #f5f5f5;padding: 0 20rpx;border-radius: 4rpx;margin-right: 20rpx;
}
.new-cats .new-cat:last-child{
  margin-right: 0rpx;
}