<box padding="30">
  <ud-textarea value="{{content}}"  bind:input="inputHandle" placeholder="请输入不少于5个字的回答" max-length="{{maxLength}}" min-length="{{minLength}}" />

  <view class="actions">
    <van-button   disabled="{{loading || content.length < minLength }}" color="{{primaryBtnColor}}" loading="{{loading}}" bindtap="submitHandle" type="info" block  >提交</van-button>
    <view style="height:20rpx;display:block;"></view>
    <van-button   bindtap="backHandle" type="default" block  >返回</van-button>
  </view>
</box>

