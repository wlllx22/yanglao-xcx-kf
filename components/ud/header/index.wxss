.outer{
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 30rpx;
  margin:20rpx auto ;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
  
}

.outer .title{
  font-size:36rpx;
  color:#fff; 
  font-weight: bolder;
  margin-bottom:20rpx;
}

.outer .body{
  font-size: 24rpx;
  color:#fff;
}

.outer .bg-mask{
  background: linear-gradient(to bottom right,  rgba(255,255,255, 0.2), rgba(0,0,0, 0.15)); 
  width:100%;
  height:100%;
  z-index:1rpx; 
  position: absolute;
  top:0; 
  left:0;
  line-height: 1.4;
}

.outer .bg{
  position: absolute;
  top:0; 
  left:0; 
  z-index:2;
  width:100%; 
  height:100%;
}


.outer .c1{
  width:100rpx; 
  height:100rpx;
  border-radius: 100rpx;
  right:200rpx;
  top:-50rpx;
}

.outer .c2{
  width:150rpx; 
  height:150rpx;
  border-radius: 100rpx;
  right:120rpx;
  top:-50rpx;
  left:-50rpx;
}

.outer .c3{
  width:50rpx; 
  height:50rpx;
  border-radius: 100rpx;
  right:120rpx;
  top:0rpx;
  right:170rpx;
}

.outer .c4{
  width:140rpx; 
  height:140rpx;
  border-radius: 140rpx;
  right:100rpx;
  bottom:-50rpx;
}

.outer .bg-circle{
  position: absolute;
  background: linear-gradient(to bottom right,  rgba(255,255,255, 0.05), rgba(255,255,255, 0.1)); 
}