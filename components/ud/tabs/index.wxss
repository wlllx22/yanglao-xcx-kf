/* components/ud/ud-tabs/index.wxss */

.tabs {
    width: 100%;
    height: 124rpx;
    line-height: 124rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #D3D3D3;
    white-space: nowrap;
    background-color: #fff;
    padding: 0 26rpx;
    z-index: -4;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.tab {
    display:flex; 
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-right: 60rpx;
    color: #333333;
    font-size: 30rpx;
    position: relative;
    /* padding-top: 10rpx; */
}

.tab .name{
    color:#333;
    font-size:26rpx;
}
.tab.active .name{
    font-size: 36rpx;
    font-weight: bold;
}

.border {
    width: 100%;
    height: 8rpx;
    border-radius: 10rpx;
    position: absolute;
    bottom:2rpx; 
    left:0;
    z-index: 1;
}