.new-version-window {
  width: 600rpx;
  height: 900rpx;
  background: none;
  position: relative;
  border-radius: 15rpx;
}

.new-version-window image.bg {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.new-version-window .close {
  display: block;
  z-index: 999;
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  right: 39rpx;
  top: 36rpx;
}

.new-version-window .close-text {
  display: block;
  z-index: 999;
  position: absolute;
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 0rpx;
  font-size: 24rpx;
  right: 39rpx;
  padding:0 4rpx;
  text-align: center;
  top: 36rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  border: 2rpx solid #ffffff;
  border-radius: 4rpx;

}

.new-version-window .confirm {
  display: block;
  z-index: 999;
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  left: 130rpx;
  right: 130rpx;
  bottom: 40rpx;
  width: 340rpx;
  height: 80rpx;
  border-radius: 40rpx;
  z-index: 999;
}

.new-version-window .title {
  display: block;
  z-index: 999;
  position: absolute;
  width: 100%;
  height: 70rpx;

  left: 0rpx;
  right: 0rpx;
  top: 98rpx;
  z-index: 999;
  color: #fff;
  font-size: 50rpx;
  text-align: center;
}


.new-version-window .sub-title {
  display: block;
  z-index: 999;
  position: absolute;
  width: 100%;
  height: 70rpx;

  left: 0rpx;
  right: 0rpx;
  top: 172rpx;
  z-index: 999;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.new-version-window .desc {
  display: block;
  z-index: 999;
  position: absolute;
  width: 480rpx;
  left: 60rpx;
  right: 60rpx;
  top: 237rpx;
  z-index: 999;
  color: #fff;
  font-size: 28rpx;
  line-height: 1.4;
}

.fork {
  display: flex;
  justify-items: center;
  justify-content: center;
  align-items: center;
  margin-top: 48rpx;
}

.fork image {
  width: 80rpx;
  height: 80rpx;
}


.new-version-window .ad {
  display: block;
  z-index: 999;
  position: absolute;
  line-height: 40rpx;
  border-radius: 0rpx;
  font-size: 24rpx;
  right: 2rpx;
  padding:0 8rpx;
  transform: scale(0.8);
  -webkit-transform: scale(0.8);
  text-align: center;
  bottom: 2rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.2);
  border: 2rpx solid #ffffff;
  border-radius: 4rpx;
}
