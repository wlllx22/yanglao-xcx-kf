.videos {
	display: flex;
	justify-content: flex-start;
	flex-wrap: wrap;
}

.videos .item {
	margin-right: 30rpx;
	/* width: calc(50% - 8rpx); */
	width: 330rpx;
}

.videos .item:nth-child(2n) {
	margin-right: 0rpx;
}

.video {
	font-size: 24rpx;
	margin-bottom: 20rpx;
	border-radius: 16rpx;
	overflow: hidden;
	background: #fff;
	flex-shrink: 0;

}

.video .cover {
	width: 330rpx;
	height: 275rpx;
	border-radius: 20rpx;
}


.video .cover image {
	width: 100%;
	height: 100%;
	border-radius: 20rpx;
}

.video .footer {
	/* padding: 24rpx 18rpx; */
}

.video .top {
	display: flex;
	align-items: center;
}

.video .top image {
	/* color: red; */
	border-radius: 15rpx;
	width: 30rpx;
	height: 30rpx;
	margin-right: 15rpx;
}

.video .top {
	color: #999;
	font-size: 22rpx;
	display: flex;
	justify-content: space-between;
}

.video .top .author {
	max-width: 160rpx;
	overflow: hidden;
	word-wrap: break-word;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.video .top .date {
	margin-left: 12rpx;
}

.video .title {
	color: #000000;
	font-weight: bold;
	font-size: 30rpx;
	min-height: 84rpx;
	line-height: 44rpx;
	text-align: left;
	margin-top: 7rpx;
	margin-bottom: 25rpx;
	overflow: hidden;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}