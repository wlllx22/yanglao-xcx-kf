.red {
    color: red;
}

.post {
    position: relative;
    min-height: 150rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin: 0rpx auto 30rpx auto;
}

.post.shadow-none {
    box-shadow: none;
}

.post.border-none {
    border: none;
}

.post .cover {
    position: relative;
    width: 268rpx;
    height: 160rpx;
    overflow: hidden;
    z-index: 1;
}

.post .cover .rank {
    position: absolute;
    top: 0rpx;
    left: 20rpx;
    color: #fff;
    padding: 0 10rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: 800;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.post .cover .rank.red {
    background: RED;
}

.post .cover .i {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    border-radius: 0rpx;
}

.post badge {
    position: absolute;
    top: 30rpx;
    left: -9rpx;
    z-index: 2;
}

.post .icons {
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 120rpx;
    height: 60rpx;
    position: absolute;
    left: calc(206rpx * 0.5 - 120rpx * 0.5);
    top: calc(150rpx * 0.5 - 60rpx * 0.5);
}

.post .icons image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.2);
}

.post .meta {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 480rpx;
    margin-left: 20rpx;
    height: 100%;
    font-size: 28rpx;
}

.post .meta .item-title {
    display: flex;
    justify-content: space-between;
}

.post .meta .item-title .left {
    color: #333;
    font-weight: bold;
    margin-bottom: 8rpx;
    line-height: 1.2;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 333rpx;
    font-size: 28rpx;
}

.post .meta {
    font-size: 28rpx;
}

.post .meta .price-info {
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
    margin: 6rpx 0 8rpx 0;
    color: #ff0000;
}

.post .meta .price-info .red {
    margin-left: 10rpx;
}

.post .type-info {
    margin-bottom: 8rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 24rpx;
    color: #777777;
}

.post .comment {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #666;
}

.post .comment .num {
    color: #666;
    font-size: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: 1;
}


.post .footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.price{
    color: #D42828;
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 6rpx;
}