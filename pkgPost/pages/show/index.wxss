/* pages/home/home.wxss */

.show-box{
    position: relative;
}

.outer {
    background-size: 750rpx auto; 
    background-repeat: no-repeat;
    width: 750rpx;
}

.margin {
    width: 100%;
    height: 15rpx;
    background: #f4f4f4;
}

/* pages/post/score-block.wxss */

.score-title {
    color: #A0A0A0;
    font-size: 24rpx;
    position: absolute;
    top: 36rpx;
    right: 20rpx;
}

.score-title text {
    color: #FFAC71;
    font-size: 28rpx;
    font-weight: bold;
}

.radar-container {
    width: 100%;
    height: 420rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.radarCanvas {
    width: 100%;
    height: 200px;
    margin: 0 auto;
    position: absolute;
}

.radar {
    width: 100%;
    background-color: #fff;
    position: relative;
}
