<!-- pages/post/events-block.wxml -->
<block-box font-size="36" leftHat="true" leftHatColor="{{color}}" sub-title="{{value.more_title}}" url="{{value.more_url}}" title="{{value.title || '家政动态'}}" sub-title="查看全部动态">
    <event wx:if="{{event && event.id}}" event="{{event}}"></event>
    <view class="empty" wx:else>没有动态</view>
    <block-button url="{{value.more_url}}" color="{{color}}" buttonVal='查看动态' />
</block-box>